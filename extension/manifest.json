{
    "manifest_version": 3,
    "name": "File Upload Keyword Detector",
    "version": "1.0",
    "description": "Prevents file uploads containing specific keywords.",
    "permissions": ["storage", "activeTab", "scripting", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  